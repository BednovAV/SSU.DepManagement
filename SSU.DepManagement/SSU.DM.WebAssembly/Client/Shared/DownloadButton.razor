<a href="@FileLink" download="@FileName">
    <RadzenButton Disabled="@Disabled" Visible="@Visible" Click="@Busy" IsBusy="@isBusy" Text="@Text" Style="@Style" />
</a>

@code {
    [Parameter]
    public string FileLink { get; set; }

    [Parameter] 
    public string FileName { get; set; }

    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public int BusyLength { get; set; }

    [Parameter]
    public string Style { get; set; }

    [Parameter]
    public bool Visible { get; set; } = true;
    
    [Parameter]
    public bool Disabled { get; set; }

    bool isBusy = false;

    async Task Busy(MouseEventArgs args)
    {
        isBusy = true;
        await Task.Delay(TimeSpan.FromSeconds(1));
        isBusy = false;
    }
}
